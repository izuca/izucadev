        </div>
    </div>
    {# Formulário #}
    <form class="bg-branco-900 lg:w-96 flex flex-col justify-center lg:scale-x-110 scale-x-110 lg:scale-110 lg:-translate-y-6" name="contact" action="/success" method="POST" data-netlify="true">
    
    <div class="flex flex-col justify-center px-9 py-9 gap-7">
        <input class=
        "bg-transparent 
        py-2 px-4 
        text-vermelho font-bold 
        placeholder:text-vermelho placeholder:text-lg placeholder:font-bold 
        border-2 border-vermelho 
        hover:-translate-y-1
        focus:bg-vermelho focus:text-branco-900 focus:outline-none focus:-translate-y-0
        transition durantion-200 " 
        name="name" type="text" id="yourName" required="true" placeholder="Nome Completo">
        
        <input class=
        "bg-transparent 
        py-2 px-4  
        text-vermelho font-bold 
        placeholder:text-vermelho placeholder:text-lg placeholder:font-bold 
        border-2 border-vermelho 
        hover:-translate-y-1
        focus:bg-vermelho focus:text-branco-900 focus:outline-none focus:-translate-y-0
        transition durantion-200 " 
        name="email" type="email"  id="yourEmail" required="true" placeholder="E-mail">
        
        <textarea class=
        "bg-transparent 
        py-2 px-4  
        text-vermelho font-bold 
        placeholder:text-vermelho placeholder:text-lg placeholder:font-bold 
        border-2 border-vermelho 
        hover:-translate-y-1
        focus:bg-vermelho focus:text-branco-900 focus:outline-none focus:-translate-y-0
        transition durantion-200 " 
        name="message" id="message" rows="4" required="true" placeholder="Mensagem"></textarea>
        
        <button class="btn rounded-none bg-branco-900 text-vermelho border-2 border-vermelho hover:bg-vermelho hover:text-branco-900 hover:border-none" type="submit">Enviar</button>
    </div>
    
    
    </form>   
